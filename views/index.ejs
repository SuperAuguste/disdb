<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Upload</title>

	<link rel="stylesheet" href="/app.css">

	<style id="dark"></style>
</head>
<body>
	
	<main>

		<div id="list">

			<h1>Files</h1>
			
			<div id="files">
				<% for (const file of files) { %>
		
					<div>
					
						<span><%- file.split("_").slice(0, -1).join("") %></span> <span style="float: right;"> (<%- file.split("_").slice(-1) %>)</span>

						<div class="controls">

							<a href="#" onclick="location.replace(`/stream_audio/${prompt('Channel name! (without #)')}/<%- encodeURIComponent(file) %>`);">Play</a>
							<a href="/download/<%- file %>">Download</a>

						</div>

					</div>
		
				<% } %>
			</div>
	
		</div>
	
		<div id="upload">
	
			<h1>Upload</h1>
	
			<p>Upload files to Discord below! Please make sure that the files don't contain any private info!</p>
	
			<form ref='uploadForm' 
			id='uploadForm' 
			action='/upload' 
			method='post' 
			encType="multipart/form-data">
				<input type="file" name="foo">
				<input type='submit' value='Upload!'>
			</form>
	
		</div>

	</main>

	<div id="toggle">
		<img id="toggler" src="moon.svg">
	</div>

	<script>

		document.getElementById("toggle").addEventListener("click", () => {
			const dark = document.getElementById("dark");
			if (!dark.innerHTML.length) {
				dark.innerHTML = `html, body {
			color: rgb(190, 190, 190);
			background-color: black;
			}`;
			document.getElementById("toggle").style.backgroundColor = "white";
			document.getElementById("toggler").src = "sun.svg";
			} else {
				dark.innerHTML = "";
				document.getElementById("toggle").style.backgroundColor = "black";
				document.getElementById("toggler").src = "moon.svg";
			}
		});

	</script>

</body>
</html>
